<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Admin?</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.admin ? "Yes" : "No" %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user if authorized? :users, :show, id: user.id %></td>
    <td><%= link_to 'Edit', edit_user_path(user) if authorized? :users, :edit, id: user.id %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if authorized? :users, :destroy, id: user.id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path if authorized? :users, :new %>
