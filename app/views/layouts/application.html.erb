<!DOCTYPE html>
<html>
<head>
  <title>ActionAuthorizer</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<ul class="hmenu">
<% if user_signed_in? %>
  <li>
  <%= link_to('Products', products_path) if authorized? :products, :index %>
  </li>
  <li>
  <%= link_to('Users', users_path) if authorized? :users, :index %>
  </li>
<% end %>

  <%= render 'devise/menu/registration_items' %>
  <%= render 'devise/menu/login_items' %>
</ul>

<%= yield %>

</body>
</html>
