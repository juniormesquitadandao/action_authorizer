<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
<% if current_user.admin? %>
    <th>User</th>
<% end %>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
<% if current_user.admin? %>
    <td><%= product.user %></td>
<% end %>
    <td><%= link_to 'Show', product if authorized? :products, :show, id: product.id %></td>
    <td><%= link_to 'Edit', edit_product_path(product) if authorized? :products, :edit, id: product.id %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete if authorized? :products, :destroy, id: product.id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path if authorized? :products, :new %>
